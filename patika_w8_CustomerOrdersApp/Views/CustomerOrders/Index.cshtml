@model patika_w8_CustomerOrdersApp.Models.CustomerOrderViewModel;

<h1>@Model.Customer.FirstName @Model.Customer.LastName</h1>
<p>Email: @Model.Customer.Email</p>

<h2>Siparişler</h2>
<table>
    <thead>
        <tr>
            <th>Sipariş ID</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Miktar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.ProductName</td>
                    <td>@order.Price</td>
                    <td>@order.Quantity</td>
                </tr>
        }
    </tbody>
</table>
