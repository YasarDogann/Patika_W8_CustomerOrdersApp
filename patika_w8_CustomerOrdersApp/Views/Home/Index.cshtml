@model patika_w8_CustomerOrdersApp.Models.CustomerOrderViewModel

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Müşteri ve Siparişler</title>
</head>
<body>
    <h2>Müşteri Bilgileri</h2>
    <p><strong>Ad:</strong> @Model.Customer.FirstName</p>
    <p><strong>Soyad:</strong> @Model.Customer.LastName</p>
    <p><strong>E-posta:</strong> @Model.Customer.Email</p>

    <h2>Sipariş Listesi</h2>
    <table border="1">
        <thead>
            <tr>
                <th>Sipariş ID</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Adet</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in @Model.Orders)
            {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.ProductName</td>
                            <td>@order.Price</td>
                            <td>@order.Quantity</td>
                        </tr>
            }
        </tbody>
    </table>
</body>
</html>




